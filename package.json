{
  "name": "sopra-steria-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "lint": "eslint \"{api,web}/**/*.{js,ts,tsx}\"",
    "format": "prettier --check \"{api,web}/**/*.{js,ts,tsx,md}\"",
    "test": "pnpm -r test --if-present",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  }
}
